<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <stroke android:width="1dp" android:color="@color/darkGray"/>
            <solid android:color="@color/darkGray"></solid>
            <corners
                android:radius="20dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/mainGray"/>
            <solid android:color="@color/mainGray"></solid>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>
</selector>