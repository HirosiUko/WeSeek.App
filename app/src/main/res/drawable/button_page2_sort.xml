<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <shape>
            <stroke android:width="3dp" android:color="@color/mainBlue"/>
            <solid android:color="@color/mainBlue"></solid>
            <corners
                android:radius="20dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="@color/darkGray"/>

            <corners
                android:radius="20dp"/>
        </shape>
    </item>
</selector>